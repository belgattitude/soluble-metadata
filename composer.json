{
    "name": "soluble/metadata",
    "description": "Extract metadata from database queries",
    "license": "MIT",
    "keywords": [
        "metadata",
        "sql",
        "query"
    ],
    "homepage": "http://soluble.io",
    "type": "library",
    "authors": [
        {
            "name": "SÃ©bastien Vanvelthem",
            "homepage": "https://github.com/belgattitude",
            "role": "Lead developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Soluble\\Metadata\\": "src/Soluble/Metadata"
        }
    },
    "require": {
        "php": "^5.4 || ^7.0",
        "soluble/datatype": "^0.11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8 || ^5.4",
        "friendsofphp/php-cs-fixer": "^2.0.0",
        "soluble/dbwrapper": "^1.0"
    },
    "scripts": {
        "check": [
            "@cs-check"
        ],
        "fix": [
            "@cs-fix"
        ],
        "test": "vendor/bin/phpunit",
        "cs-check": "vendor/bin/php-cs-fixer --diff --dry-run -v fix",
        "cs-fix": "vendor/bin/php-cs-fixer -v fix",
        "phpstan": "phpstan analyse -l 6 -c phpstan.neon src"
    },

    "archive": {
        "exclude": ["phpstan.neon", "test", "doc", ".travis.yml", ".codeclimate.yml", ".coveralls.yml", ".scrutinizer.yml", ".php_cs", ".gitignore", "phpcs.xml"]
    }
}
